<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
        <span><%= comment.body %> by <%= link_to comment.user.name, user_path(comment.user_id) %>さん</span>
        <%= link_to "編集", edit_comment_path(comment.id), remote: true, class: "btn btn-primary mr-3" if current_user ==  comment.user %>
        <%= link_to "削除", game_comment_path(comment.game_id, comment.id), method: :delete, remote: true, class: "btn btn-primary mr-3" if current_user ==  comment.user %>
      </li>
    <% end %>
  <% end %>
</ul>