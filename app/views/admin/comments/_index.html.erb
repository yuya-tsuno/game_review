<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <span><%= comment.body %> by <%= link_to comment.user.name, admin_user_path(comment.user_id) %>さん</span>
        <%= link_to "編集", edit_admin_comment_path(comment.id), remote: true, class: "btn btn-primary mr-3" %>
        <%= link_to "削除", admin_game_comment_path(comment.game_id, comment.id), method: :delete, remote: true, class: "btn btn-primary mr-3" %>
      </li>
    <% end %>
  <% end %>
</ul>